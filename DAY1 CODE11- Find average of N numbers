package Day1;
import java.util.Scanner;
public class Find_average_of_N_numbers {

    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        System.out.println("How many numbers do you want to average?");
        int n = scan.nextInt();  // total numbers to read

        double sum = 0;

        for (int i = 1; i <= n; i++) {
            System.out.println("Enter number " + i + ":");
            double number = scan.nextDouble();  // read each number
            sum += number;                     // add to sum
        }

        scan.close();  // close scanner after all inputs

        double average = sum / n;             // calculate average
        System.out.println("The total sum is: " + sum);
        System.out.println("The average is: " + average);
    }
}
