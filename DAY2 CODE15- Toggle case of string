package Day2;
import java.util.Scanner;
public class Toggle_case_of_string {

	public static void main(String[] args) 
	{
		Scanner scan = new Scanner(System.in);
		System.out.println("Enter a string");  					//ABcd efJHI		
		String str = scan.nextLine();
		scan.close();
		
		StringBuilder toggle = new StringBuilder();
		for(int i=0;i<str.length();i++)
		{
			char ch = str.charAt(i);
			if(ch >= 'A' && ch <= 'Z')
			{
				toggle.append(Character.toLowerCase(ch));
			}
			
			else if (ch >= 'a' && ch <= 'z')
			{
				toggle.append(Character.toUpperCase(ch));
			}
			else
			{
				toggle.append(ch);
			}			
		}
		System.out.println("The toggled string is: " + toggle.toString());
	}
}
